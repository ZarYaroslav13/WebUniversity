@using WebUniversity.ViewModels;
@model StudentViewModel
@{
    <!DOCTYPE html>
<html>
<head>
<meta charset="utf-8" />
<title>Create new student</title>
</head>
<body>
  <h1>Create new student</h1>
   <form asp-controller="Student" asp-action="Create" method="post">
    <fieldset>
      <legend>Student information</legend>

      <p>
         <label asp-for="LastName"></label>
         <input asp-for="LastName">
         <span asp-validation-for="LastName" class="text-danger"></span>
      </p>

      <p>
         <label asp-for="FirstName"></label>
         <input asp-for="FirstName">
         <span asp-validation-for="FirstName" class="text-danger"></span>
      </p>

      <p>
         <div>
            <dl class="row">
                <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.GroupId)
                </dt>

                <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.GroupId)
                </dd>
            </dl>

          <input asp-for="GroupId" hidden>
         </div>
      </p>

      <p><input type="submit" name="buttonSubmit" value="Create"/></p>
    </fieldset>
  </form>
</body>
</html>
}
